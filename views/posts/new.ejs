<%- include('../partials/header') %>

<h1>New Post</h1>

<form action="/posts" method="POST">
  <div class="form-group">
    <input
      class="form-control"
      type="text"
      name="pictureUrl"
      placeholder="e.g. http://imgur.com/myPic.jpg"
    >
  </div>

  <div class="form-group">
    <textarea
      class="form-control"
      placeholder="What's on your mind?"
      name="description"
      rows="8" cols="60"
    ></textarea>
  </div>

  <input
    class="btn btn-outline-dark"
    type="submit"
    value="Submit"
  >
</form>

